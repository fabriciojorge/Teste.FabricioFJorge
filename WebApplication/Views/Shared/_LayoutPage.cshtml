<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - AppFabricioJorge</title>
    <!--CSS-->
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/Estilos.css" rel="stylesheet" />
    <!--JS-->
    <script src="~/Scripts/jquery-3.0.0.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    @RenderSection("scripts", required: false)
</head>
<body class="card">
    <header class="card-header bg-dark text-white">
        <ul class="nav">
            <li class="nav-item">
                @Html.ActionLink("Home", "Index", "Home", null, new { @class = "font-weight-bold nav-link link-menu" })
            </li>
            <li class="nav-item">
                @Html.ActionLink("Resultados", "Index", "Resultado", null, new { @class = "font-weight-bold nav-link link-menu" })
            </li>
            <li class="nav-item">
                @Html.ActionLink("Sobre", "Index", "Sobre", null, new { @class = "font-weight-bold nav-link link-menu" })
            </li>
        </ul>
    </header>
    <main id="principal" class="card-body">
        @RenderBody()
    </main>
    <footer class="card-footer bg-dark">
        <div id="rodape">&copy; 2020 - Feito por Fabrício Jorge</div>
    </footer>
</body>
</html>